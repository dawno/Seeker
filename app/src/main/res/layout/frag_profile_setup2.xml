<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin_less"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_rectangle">

                <TextView
                    android:id="@+id/sectorsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="52dp"
                    android:text="Sectors"
                    android:textAlignment="center"
                    android:textSize="@dimen/textLarge" />

                <ImageButton
                    android:id="@+id/addSectorBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/breakerHeight"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:background="@color/colorYellow" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/sectorDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sectorTitle"
                    android:textSize="@dimen/textMedium" />

                <EditText
                    android:id="@+id/addSector"
                    style="@style/edittextThemed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sectorDesc"
                    android:layout_marginRight="35dp"
                    android:hint="@string/sectorHint"
                    android:lines="1" />

                <ImageButton
                    android:id="@+id/saveSectorBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/addSector"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tick"
                    android:visibility="gone" />

                <View
                    android:id="@+id/sectorBreaker"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/breakerHeight"
                    android:layout_below="@id/addSector"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorYellow" />

                <TextView
                    android:id="@+id/sectorsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/sectorBreaker"
                    android:layout_marginRight="35dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textMedium" />

                <ImageButton
                    android:id="@+id/editSectorBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sectorsContent"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/sectorBreaker"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_mode_edit_24dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_rectangle">

                <TextView
                    android:id="@+id/skillsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="52dp"
                    android:text="Skills"
                    android:textAlignment="center"
                    android:textSize="@dimen/textLarge" />

                <ImageButton
                    android:id="@+id/addSkillBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/breakerHeight"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:background="@color/colorYellow" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/skillDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/skillTitle"
                    android:textSize="@dimen/textMedium" />

                <EditText
                    android:id="@+id/addSkill"
                    style="@style/edittextThemed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/skillDesc"
                    android:layout_marginRight="35dp"
                    android:hint="@string/skillHint"
                    android:lines="1" />

                <ImageButton
                    android:id="@+id/saveSkillBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/addSkill"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tick"
                    android:visibility="gone" />

                <View
                    android:id="@+id/skillBreaker"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/breakerHeight"
                    android:layout_below="@id/addSkill"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorYellow" />

                <TextView
                    android:id="@+id/skillsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/skillBreaker"
                    android:layout_marginRight="35dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textMedium" />

                <ImageButton
                    android:id="@+id/editSkillBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/skillsContent"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/skillBreaker"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_mode_edit_24dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_rectangle">

                <TextView
                    android:id="@+id/projectsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="52dp"
                    android:text="Project"
                    android:textAlignment="center"
                    android:textSize="@dimen/textLarge" />

                <ImageButton
                    android:id="@+id/editProjectBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:src="@drawable/ic_mode_edit_24dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/breakerHeight"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:background="@color/colorYellow" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/projectDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/projectTitle"
                    android:textSize="@dimen/textMedium" />

                <EditText
                    android:id="@+id/addProject"
                    style="@style/edittextThemed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/projectDesc"
                    android:layout_marginRight="35dp"
                    android:hint="@string/projectHint"
                    android:maxLength="100"
                    android:singleLine="false" />

                <ImageButton
                    android:id="@+id/saveProjectBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/addProject"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tick"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/uploadBtn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload" />

                <TextView
                    android:id="@+id/uploadBtnText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/uploadBtn"
                    android:text="Upload Resume\nin PDF"
                    android:textSize="@dimen/textMedium" />

                <ImageButton
                    android:id="@+id/nextBtn"
                    style="@style/btnNext"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <ImageButton
                    android:id="@+id/backBtn"
                    style="@style/btnBack"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>